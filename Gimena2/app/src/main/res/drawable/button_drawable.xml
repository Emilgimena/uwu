<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightblue"></solid>
            <stroke android:color="@color/colorPrimaryDark" android:width="2dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow"></solid>
            <stroke android:color="@color/whitedirty" android:width="2dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>

    </item>
</selector>